<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lhs.pay.core.user.dao.impl.MemberInfoDaoImpl">

	<sql id="table"> TBL_PORTAL_MERCHANT_ROLE </sql>

	<resultMap id="beanMap" type="MerchantRole">
		<id property="id" column="ID" />
		<result property="version" column="VERSION" />
		<result property="createTime" column="CREATETIME" />
		<result property="roleName" column="ROLENAME"/>
		<result property="remark" column="REMARK"/>
		<result property="userNo" column="USERNO"/>
	</resultMap>
	
	<insert id="insert" parameterType="MerchantRole" keyProperty="id" useGeneratedKeys="true">
		insert into
		<include refid="table"/>
		(VERSION,
		CREATETIME,
		ROLENAME,
		REMARK,
		USERNO)
		values
		(
		0,
		#{createTime},
		#{roleName},
		#{remark},
		#{userNo}
		)
	</insert>
	
	<update id="update" parameterType="MerchantRole">
		update
		<include refid="table"/>
		<set>
			VERSION = #{version} + 1,
			ROLENAME = #{roleName},
			REMARK = #{remark},
			USERNO = #{userNo}
		</set>
		<where>
			ID = #{id} and VERSION = #{version}
		</where>
	</update>

	<select id="getById" parameterType="long" resultMap="beanMap">
		select * from 
		<include refid="table"/>
		where ID = #{id}
	</select>
	
	<select id="findByMerchantId" parameterType="long" resultMap="beanMap">
		select * from
		<include refid="table"/>
		where USERNO = #{userNo}
	</select>

	<select id="findRoleByUserNo" parameterType="long" resultMap="beanMap">
		select * from
		<include refid="table"/>
		where USERNO = #{userNo} or id = 0
	</select>

	<delete id="deleteById" parameterType="long">
		delete from
		<include refid="table"/>
		where ID = #{id}
	</delete>
	
	<select id="listAll" resultMap="beanMap">
		select * from 
		<include refid="table"/>
		order by ID
	</select>

	<sql id="condition_sql">
		<if test="userNo != null and userNo != ''"> and (USERNO = #{userNo} or id = 0)</if>
		<if test="roleName != null and roleName != ''"> and ROLENAME like concat(#{roleName}, '%')</if>
	</sql>

	<select id="listPage" parameterType="MerchantNo" resultMap="beanMap">
		select * from
		<include refid="table"/>
		<where>
			<include refid="condition_sql"/>
		</where>
		<![CDATA[ order by ID desc]]>
	</select>

	<select id="listBy" parameterType="MerchantRole" resultMap="beanMap">
		select * from
		<include refid="table"/>
		<where>
			<include refid="condition_sql"/>
		</where>
	</select>
</mapper>